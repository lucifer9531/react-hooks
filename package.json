{
  "name": "react-hooks",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "toc": "markdown-toc -i README.md",
    "lint": "eslint packages --ext .ts --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "lerna-tsc": "lerna run tsc"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "all-contributors-cli": "^5.6.0",
    "conventional-changelog-cli": "^2.0.11",
    "cz-emoji": "^1.1.2",
    "eslint": "^6.8.0",
    "husky": "^7.0.4",
    "is-builtin-module": "^3.0.0",
    "jest": "^24.9.0",
    "lerna": "^4.0.0",
    "lint-staged": "^7.3.0",
    "markdown-toc": "^1.2.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.59.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "types": [
        {
          "emoji": "\tüåü",
          "code": ":star2:",
          "description": "\tA new feature",
          "name": "feat"
        },
        {
          "emoji": "\tüêû",
          "code": ":beetle:",
          "description": "\tA bug fix",
          "name": "fix"
        },
        {
          "emoji": "\tüé®",
          "code": ":art:",
          "description": "\tNeither fixes a bug nor adds a feature",
          "name": "refactor"
        },
        {
          "emoji": "\tüöì",
          "code": ":police_car:",
          "description": "\t Testing improved with new or fixed tests",
          "name": "test"
        },
        {
          "emoji": "\tüî©",
          "code": ":nut_and_bolt:",
          "description": "\tDoesn't modify src or test files",
          "name": "chore"
        },
        {
          "emoji": "\tüí∞",
          "code": ":moneybag:",
          "description": "\tImproves performance with this change",
          "name": "perf"
        },
        {
          "emoji": "\tüö•",
          "code": ":traffic_light:",
          "description": "\tCI config files and scripts",
          "name": "ci"
        },
        {
          "emoji": "\t‚ôªÔ∏è",
          "code": ":recycle:",
          "description": "\tOptimize workflow",
          "name": "workflow"
        },
        {
          "emoji": "\tüöÄ",
